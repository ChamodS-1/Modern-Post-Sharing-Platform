                        <p id="errorMsg"></p>

                    </div> -->

                    <!-- <button type="button" id="addTags">Add</button> -->

                    <textarea name="hashTags" rows="3" id="hashTags" placeholder="use , to separate tags"><%= key.hastags %></textarea>
                    <textarea name="postcontent" rows="7" id="post-content" placeholder="Describe&#10;What You&#10;Want" required maxlength="500"><%= key.postcontent %></textarea>
                    <p class="textSize" style="color: rgb(23,28,31);"><span class="textSizeNumber">0</span>/200</p>
                    

                    <button type="submit">
                        <h3>Re Post</h3>
                    </button>

                </form>
            </div>

            <% } %>

        </div>

        <% } %>

